<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/gdrawer_layout"
    android:fitsSystemWindows="true"
    android:background="#b3dfff"
    tools:openDrawer="start"
    tools:context="domain.hackathon.personal_assistant.GoogleSearch">

    <include
        layout="@layout/app_bar_google_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/gnav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="#b3ecff"
        android:textColor="@color/Button_color"
        app:headerLayout="@layout/nav_header_homescreen_nav"
        app:menu="@menu/activity_homescreen_nav_drawer" />

</android.support.v4.widget.DrawerLayout>
